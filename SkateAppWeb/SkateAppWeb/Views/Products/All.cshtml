                <input type="submit" value="Clear all" />
            </form>
                    </div>
                </div>


    <div class="products-all-products">
        <div class="products-container">
            @foreach (var item in Model)
            {
				<div class="product-item">	
                    <a class="see-more-btn" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">
                    <img src="@item.Picture" alt="@item.Name" class="product-image" />
                    </a>
					@if (item.Discount >= 50 && item.Quantity > 0)
					{
						<span class="on-sale-ribbon">On Sale</span>
					}
                    <div class="favorite-btn">
                        @await Html.PartialAsync("~/Views/Products/_FavoritePartialView.cshtml", new SkateAppWeb.Models.Favorites.FavoriteCreateVM { ProductId = item.Id })
                    </div>

                    <div class="product-details">
                        <span class="brand-name">@item.BrandName</span>
                        <span class="product-name">@item.Name</span>
                        @if (item.Quantity > 0)
                        {
                            @if (item.Discount < 50)
                            {
                                <span class="order-price-p price" data-original-price="@item.Price">@string.Format($"{item.Price:f2}") lv</span>
                               
                            }
                            else
                            {
                                <span class="order-price-p price" data-original-price="@item.Price" style="color:gold"> @string.Format($"{item.Price * (100 - item.Discount) / 100 :f2}") lv</span>
                            }
                        }
                        else
                        {
                            <span class="not-available" style="color:gold;">Not Available</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

