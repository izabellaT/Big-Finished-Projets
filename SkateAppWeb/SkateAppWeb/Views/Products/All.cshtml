            <form class="products-all-search-bars" asp-controller="Products" asp-action="Search" method="get">
                <p style="font-weight:bold">
					Category: <input type="text" name="SearchStringCategoryName"/>
                    Brand: <input type="text" name="SearchStringBrandName"/>
                    Product name: <input type="text" name="SearchStringProductName" />
                    <input type="submit" value="Search" />
                </p>
            </form>
            <div class="filter-image-container">
                <img src="~/images/2-01_cbfa49d8-c0d5-47b2-9d8f-40da6a6606c2_480x480.webp" class="filter-image-containermimi" alt="Filter Image" />
