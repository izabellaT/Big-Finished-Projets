@model SkateAppWeb.Models.Orders.OrderCreateVM

<div class="order-partial-container">
    <form asp-controller="Orders" asp-action="Create" method="post" class="order-form">
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Quantity">Quantity:</label>
            <input asp-for="Quantity" class="form-control" type="number" min="1" />
        </div>


        <div class="form-group">
            <label for="promocode">Promocode:</label>
            <input type="text" id="promocode" name="promocode" class="form-control" />
        </div>


        <button type="submit" class="btn btn-primary">Order Now</button>
    </form>
</div>